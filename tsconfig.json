{
  "version": "2.8.3",
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "jsx": "preserve",
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "styles/*": [
        "src/styles/*"
      ],
      "assets/*": [
        "src/assets/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
